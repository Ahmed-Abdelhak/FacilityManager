@model BuildingFacilityManager.ViewModels.DashBoardViewModel

<br/>


<div class="row">
    <div class="col-sm-4 mb-3">
        <div class="card text-white bg-primary o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="mr-5">(@Model.TodayInspectionTasks.Count) My Today's Inspection Tasks</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="#TodayTasksTable">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>

    <div class="col-sm-4 mb-3">
        <div class="card text-white bg-success o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-life-ring"></i>
                </div>
                <div class="mr-5">(@Model.ScheduledInspectionTasks.Count) My Today's Scheduled Tasks</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="#ScheduledTasksTable">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
    
    <div class="col-sm-4 mb-3">
        <div class="card text-white bg-danger o-hidden h-100">
            <div class="card-body">
                <div class="card-body-icon">
                    <i class="fas fa-fw fa-list"></i>
                </div>
                <div class="mr-5">(@Model.MyCreatedWorkOrdersToday.Count) My Today's Reported Work Orders</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="#workOrderTable">
                <span class="float-left">View Details</span>
                <span class="float-right">
                    <i class="fas fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>

</div>