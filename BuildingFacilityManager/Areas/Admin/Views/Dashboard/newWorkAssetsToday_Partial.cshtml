<h3>Today's new Installed Assets</h3>

<div class="thumbnail">

<div class="caption">
<table class="table table-hover table-bordered" id="assetsWorkOrderToday">
    <thead>
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>Space Location</th>
            <th>Status</th>
            <th>Type</th>
            <th>InstallationDate</th>
            <th>ManufacturedDate</th>
            <th>Price</th>
            <th>Vendor</th>
            <th>Warranty</th>
          
            @*<th>Related Asset</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model.Assets)
        {

            <tr id="id-@asset.Id">

                <td>
                    @asset.Id
                </td>
                <td>
                    @asset.Label
                </td>
                <td>
                    @asset.Space.Label
                </td>
                <td>
                    @asset.AssetStatus
                </td>
                <td>
                    @asset.AssetType
                </td>
                <td>
                    @asset.InstallationDate
                </td>
                <td>
                    @asset.ManufacturedDate
                </td>
                <td>
                    @asset.Price
                </td>
                <td>
                    @asset.Vendor
                </td>
                <td>
                    @asset.Warranty
                </td>

                @*<td>
                        <button type="button" class="btn btn-default" style="float: right" data-toggle="modal" data-target="#myModal-AssetWorkOrders">
                            Work Orders
                        </button>
                    </td>*@
                @*<td>
                        @foreach (var related in @asset.RelatedAssets)
                        {
                            @related.Label
                        }

                    </td>*@
            </tr>
        }
    </tbody>
</table></div></div>

