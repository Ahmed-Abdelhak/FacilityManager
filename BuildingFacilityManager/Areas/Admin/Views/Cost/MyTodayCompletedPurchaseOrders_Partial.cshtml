@model BuildingFacilityManager.ViewModels.DashBoardViewModel

<hr />
<br />
<h3>Today's Purchase Work Orders ( Costs are : @Model.TodayPurchasesOrdersCost EGP) </h3>

<div class="thumbnail">

    <div class="caption">
        <table class="table table-hover table-bordered" id="CompletedPurchaseToday">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Cost</th>
                    <th>Work Order Id</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var purchaseOrder in Model.TodayCompletedPurchaseOrders)
                {

                <tr id="id-@purchaseOrder.Id">

                    <td>
                        @purchaseOrder.Id
                    </td>
                    <td>
                        @purchaseOrder.Description
                    </td>
                    <td>

                        @purchaseOrder.PurchaseDateTime
                    </td>
                    <td>
                        @purchaseOrder.Cost

                    </td>
                    <td>
                        @purchaseOrder.WorkOrderId
                    </td>
                    
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
