@model BuildingFacilityManager.ViewModels.BuildingViewModel
@{
    ViewBag.Title = "Building Definition";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.Partial("Building_Partial")
<br />
@Html.Partial("Stories_Partial")
@Html.Partial("Add_Storey_Partial")
<br />

@Html.Partial("Spaces_Partial")
@Html.Partial("Add_Space_Partial")







@section scripts
{
    <script>
        $(document).ready(function () {
            $("#spaces").DataTable();
            $("#stories").DataTable();
        });

        if (@ViewBag.DimentionAlert == 1) {
            alert("Dimensions of Space could NOT exceed the Floor Dimensions");
        }
        if (@ViewBag.SpaceConflict == 1) {
            alert("There's a Conflict between two Spaces, please try to re-position the Space");
        }
    </script>
}