@model BuildingFacilityManager.ViewModels.BuildingViewModel

<h3>Building</h3>

<div class="thumbnail">

<div class="caption">
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Label</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var building in Model.Buildings)
        {

            <tr id="id-@building.Id">
               
                <td>
                    @building.Label
                </td>
                <td>
                    @building.Description
                </td>
            </tr>
        }
    </tbody>
</table></div></div>
